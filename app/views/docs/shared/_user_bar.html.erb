<a href="#" class="dropdown-toggle" data-toggle="dropdown">
  <i class="glyphicon glyphicon-user"></i>
  <span><%= current_docs_user.smart_name %> <i class="caret"></i></span>
</a>
<ul class="dropdown-menu">
  <!-- User image -->
  <li class="user-header bg-light-blue">
    <p>
      <span class="color-white"><%= current_docs_user.smart_name %></span>
      <small>Last login: <%= current_docs_user.last_sign_in_at.in_time_zone if current_docs_user.last_sign_in_at.present? %></small>
    </p>
  </li>
  <!-- Menu Footer-->
  <li class="user-footer">
    <div class="pull-left">
    </div>
    <div class="pull-right">
      <%= link_to 'Sign Out', destroy_session_path(devise_resource_name), class: 'btn btn-default btn-flat', method: :delete %>
    </div>
  </li>
</ul>
